---
const sections = [
  { name: "Inicio", ref: "#" },
  { name: "Recursos", ref: "#recursos" },
  { name: "Beneficios", ref: "#beneficios" },
  { name: "Noticias", ref: "#noticias" },
  { name: "Info", ref: "#info" },
];
---

<nav
  class="fixed z-40 h-24 w-full grid grid-cols-3 px-20 place-content-center place-items-center shadow-[0_15px_50px_rgba(6,182,212,0.4)] overflow-hidden rounded-2xl m-2"
  style="background: linear-gradient(135deg, #0284c7 0%, #3196a8 20%, #22d3ee 40%, #4e9ea8 60%, #a5f3fc 80%, #485761 100%);"
>
  <!-- Ondas de fondo -->
  <div class="absolute inset-0 opacity-30">
    <div
      class="absolute w-[500px] h-[500px] bg-gradient-to-br from-cyan-300 to-blue-400 rounded-full blur-3xl -top-60 -left-40 animate-wave"
    >
    </div>
    <div
      class="absolute w-[450px] h-[450px] bg-gradient-to-br from-sky-200 to-cyan-300 rounded-full blur-3xl -top-48 left-1/4 animate-wave-delayed"
    >
    </div>
    <div
      class="absolute w-[400px] h-[400px] bg-gradient-to-br from-teal-300 to-cyan-400 rounded-full blur-3xl -bottom-48 right-1/4 animate-wave-slow"
    >
    </div>
  </div>

  <!-- Rayos -->
  <div class="absolute top-0 left-0 w-full h-full opacity-20">
    <div
      class="absolute top-0 left-1/4 w-1 h-full bg-gradient-to-b from-yellow-300 via-transparent to-transparent transform -skew-x-12"
    >
    </div>
    <div
      class="absolute top-0 left-1/3 w-1 h-full bg-gradient-to-b from-yellow-200 via-transparent to-transparent transform -skew-x-12"
    >
    </div>
    <div
      class="absolute top-0 left-1/2 w-1 h-full bg-gradient-to-b from-amber-200 via-transparent to-transparent transform -skew-x-12"
    >
    </div>
  </div>

  <!-- Espuma -->
  <div
    class="absolute bottom-0 left-0 right-0 h-12 bg-gradient-to-t from-white/30 via-cyan-100/20 to-transparent"
  >
  </div>

  <!-- LOGO -->
  <div
    class="relative z-10 place-self-start self-center flex items-center gap-4"
  >
    <div
      class="w-14 h-14 rounded-3xl bg-gradient-to-br from-yellow-300 to-amber-400 flex items-center justify-center shadow-2xl border-2 border-white/60 relative overflow-hidden"
    >
      <div
        class="absolute inset-0 bg-gradient-to-tr from-transparent to-white/30"
      >
      </div>
      <span class="text-3xl relative z-10 drop-shadow-lg">ðŸŒ´</span>
    </div>
    <div>
      <h1
        class="font-black text-3xl text-white drop-shadow-[0_4px_12px_rgba(0,0,0,0.3)] tracking-tight leading-tight"
        style="font-family: 'Inter', 'Segoe UI', sans-serif;"
      >
        EnergÃ­as Limpias
      </h1>
      <p
        class="text-xs font-semibold text-white/90 tracking-widest drop-shadow-md"
        style="font-family: 'Inter', 'Segoe UI', sans-serif;"
      >
        RegiÃ³n insular
      </p>
    </div>
  </div>

  <!-- LINKS -->
  <ul class="flex gap-10 items-center justify-center w-full relative z-10">
    {
      sections.map((section) => (
        <li
          class="group relative"
          style="font-family: 'Inter', 'Segoe UI', sans-serif;"
        >
          <a
            href={section.ref}
            class="relative text-white font-bold text-lg tracking-wide hover:text-yellow-100 transition-all duration-300 cursor-pointer drop-shadow-[0_2px_8px_rgba(0,0,0,0.3)] px-5 py-3 rounded-2xl hover:bg-white/20 backdrop-blur-md block border border-transparent hover:border-white/40 hover:shadow-[0_4px_20px_rgba(255,255,255,0.3)]"
          >
            {section.name}
            <span class="absolute -bottom-1 left-1/2 -translate-x-1/2 w-0 h-1 bg-gradient-to-r from-yellow-300 via-amber-300 to-yellow-300 rounded-full group-hover:w-3/4 transition-all duration-300 shadow-[0_0_12px_rgba(252,211,77,0.8)]" />
          </a>
        </li>
      ))
    }
  </ul>

  <!-- AQUÃ YA NO ESTÃ EL CAMBIO DE IDIOMA -->
</nav>

<style>
  @keyframes wave {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.3;
    }
    50% {
      transform: translate(30px, -20px) scale(1.1);
      opacity: 0.4;
    }
  }
  @keyframes wave-delayed {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.25;
    }
    50% {
      transform: translate(-40px, 30px) scale(1.15);
      opacity: 0.35;
    }
  }
  @keyframes wave-slow {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.3;
    }
    50% {
      transform: translate(20px, 40px) scale(1.08);
      opacity: 0.4;
    }
  }
  .animate-wave {
    animation: wave 8s ease-in-out infinite;
  }
  .animate-wave-delayed {
    animation: wave-delayed 10s ease-in-out infinite;
  }
  .animate-wave-slow {
    animation: wave-slow 12s ease-in-out infinite;
  }
</style>
